<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ECEFF1"
    android:padding="16dp">

    <!-- Tarjeta de Información -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="16dp"
        app:cardElevation="10dp"
        android:background="@android:color/white"
        android:padding="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Panel de Administración"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#3F51B5"
                android:gravity="center"
                android:layout_marginBottom="4dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Contenedor de Botones -->
    <GridLayout
        android:id="@+id/gridButtonContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toBottomOf="@id/cardInfo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Botón Usuarios -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_margin="8dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnUsuarios"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:backgroundTint="#6200EE"
                app:cornerRadius="40dp"
                app:icon="@drawable/ic_registro_usuario"
                app:iconTint="@android:color/white"
                app:iconSize="40dp"
                android:elevation="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Usuarios"
                android:textColor="#3F51B5"
                android:textSize="14sp"
                android:layout_marginTop="4dp"/>
        </LinearLayout>

        <!-- Botón Colegios -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_margin="8dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnColegios"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:backgroundTint="#6200EE"
                app:cornerRadius="40dp"
                app:icon="@drawable/ic_school"
                app:iconTint="@android:color/white"
                app:iconSize="40dp"
                android:elevation="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Colegios"
                android:textColor="#3F51B5"
                android:textSize="14sp"
                android:layout_marginTop="4dp"/>
        </LinearLayout>

        <!-- Botón Ubicaciones -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_margin="8dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnUbicaciones"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:backgroundTint="#6200EE"
                app:cornerRadius="40dp"
                app:icon="@drawable/ic_location"
                app:iconTint="@android:color/white"
                app:iconSize="40dp"
                android:elevation="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ubicaciones"
                android:textColor="#3F51B5"
                android:textSize="14sp"
                android:layout_marginTop="4dp"/>
        </LinearLayout>

        <!-- Botón Eventos -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_margin="8dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnEventos"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:backgroundTint="#6200EE"
                app:cornerRadius="40dp"
                app:icon="@drawable/ic_event"
                app:iconTint="@android:color/white"
                app:iconSize="40dp"
                android:elevation="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Eventos"
                android:textColor="#3F51B5"
                android:textSize="14sp"
                android:layout_marginTop="4dp"/>
        </LinearLayout>

        <!-- Botón Curso -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_margin="8dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCurso"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:backgroundTint="#6200EE"
                app:cornerRadius="40dp"
                app:icon="@drawable/ic_event"
                app:iconTint="@android:color/white"
                app:iconSize="40dp"
                android:elevation="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Curso"
                android:textColor="#3F51B5"
                android:textSize="14sp"
                android:layout_marginTop="4dp"/>
        </LinearLayout>

        <!-- Botón Semestre -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_margin="8dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSemestre"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:backgroundTint="#6200EE"
                app:cornerRadius="40dp"
                app:icon="@drawable/ic_event"
                app:iconTint="@android:color/white"
                app:iconSize="40dp"
                android:elevation="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Semestre"
                android:textColor="#3F51B5"
                android:textSize="14sp"
                android:layout_marginTop="4dp"/>
        </LinearLayout>

        <!-- Botón Asignatura -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_margin="8dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnAsignatura"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:backgroundTint="#6200EE"
                app:cornerRadius="40dp"
                app:icon="@drawable/ic_event"
                app:iconTint="@android:color/white"
                app:iconSize="40dp"
                android:elevation="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Asignatura"
                android:textColor="#3F51B5"
                android:textSize="14sp"
                android:layout_marginTop="4dp"/>
        </LinearLayout>

        <!-- Botón ACS -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_margin="8dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnAcs"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:backgroundTint="#6200EE"
                app:cornerRadius="40dp"
                app:icon="@drawable/ic_event"
                app:iconTint="@android:color/white"
                app:iconSize="40dp"
                android:elevation="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ACS"
                android:textColor="#3F51B5"
                android:textSize="14sp"
                android:layout_marginTop="4dp"/>
        </LinearLayout>

        <!-- Botón Clase -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_margin="8dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnClase"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:backgroundTint="#6200EE"
                app:cornerRadius="40dp"
                app:icon="@drawable/ic_event"
                app:iconTint="@android:color/white"
                app:iconSize="40dp"
                android:elevation="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Clase"
                android:textColor="#3F51B5"
                android:textSize="14sp"
                android:layout_marginTop="4dp"/>
        </LinearLayout>

    </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>






