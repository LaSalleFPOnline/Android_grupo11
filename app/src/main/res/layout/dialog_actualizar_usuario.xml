<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvTituloDialogo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Registro de Usuario"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center"
            android:paddingBottom="8dp" />

        <EditText
            android:id="@+id/etNombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nombre"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/etApellido1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Primer apellido"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/etApellido2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Segundo apellido"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/etTelefono"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="TelÃ©fono"
            android:inputType="phone" />

        <EditText
            android:id="@+id/etEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Correo electrÃ³nico"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/etCodigoActivacion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="CÃ³digo de activaciÃ³n"
            android:inputType="text" />

        <Spinner
            android:id="@+id/spinnerRol"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp" />

        <Spinner
            android:id="@+id/spinnerEstado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp" />

        <Spinner
            android:id="@+id/spinnerCurso"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/tvAsignaturasSeleccionadas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Selecciona asignaturas"
            android:padding="12dp"
            android:background="@android:drawable/edit_text"
            android:textColor="@android:color/black"
            android:layout_marginTop="8dp" />

        <!-- ðŸ”¹ ImageView para mostrar la foto capturada -->
        <ImageView
            android:id="@+id/ivFotoUsuario"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="8dp"
            android:contentDescription="Foto del usuario"
            android:scaleType="centerCrop"
            android:background="@android:color/darker_gray" />

        <Button
            android:id="@+id/btnFotoUsuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Capturar Foto"
            android:layout_marginTop="8dp" />

        <Button
            android:id="@+id/btnGuardarUsuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Guardar"
            android:layout_marginTop="12dp"
            android:backgroundTint="@android:color/holo_blue_dark"
            android:textColor="@android:color/white" />
    </LinearLayout>
</ScrollView>


