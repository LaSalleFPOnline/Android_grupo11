<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvNombreUbicacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre de la Ubicación"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tvTipoUbicacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tipo de Ubicación"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/tvNombreColegioUbicacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre del Colegio"
            android:textSize="14sp"/>
    </LinearLayout>

    <ImageButton
        android:id="@+id/btnActualizarUbicacion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@android:drawable/ic_menu_edit"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:padding="8dp" />

    <ImageButton
        android:id="@+id/btnEliminarUbicacion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@android:drawable/ic_menu_delete"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:padding="8dp"/>
</LinearLayout>
